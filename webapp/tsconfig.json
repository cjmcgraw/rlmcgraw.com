{
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "noImplicitAny": false,
    "module": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "sourceMap": true,
    "plugins": [
      {
        "name": "@mdx-js/typescript-plugin"
      }
    ],
    "types": [
      "webpack-env"
    ]
  },
  "mdx": {
    "checkMdx": true
  }
}
