{
  "compilerOptions": {
    "jsx": "react-jsxdev",
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "noImplicitAny": false,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es2022",
    "allowJs": true,
    "sourceMap": true,
    "plugins": [
      {
        "name": "@mdx-js/typescript-plugin"
      }
    ]
  },
  "mdx": {
    "checkMdx": true
  }
}
